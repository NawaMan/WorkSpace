#!/usr/bin/env bash
set -euo pipefail

port="${1:?host port required}"

cat <<EOF

============================================================
🚀 WORKSPACE PORT SELECTED
============================================================
$(printf '🔌 Using host port: \033[1;32m%s\033[0m -> container: \033[1;34m10000\033[0m\n' "$port")
🌐 Open: http://localhost:${port}
============================================================

EOF
