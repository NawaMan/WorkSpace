# syntax=docker/dockerfile:1.7

#== This section is required to allow normal operation of all variants ==

ARG VARIANT_TAG=container
ARG VERSION_TAG=latest
FROM nawaman/workspace:${VARIANT_TAG}-${VERSION_TAG}

# The default value is the latest LTS
ARG PY_VERSION=3.12
ARG VARIANT_TAG=container

SHELL ["/bin/bash","-o","pipefail","-lc"]
USER root

ENV SETUPS_DIR=/opt/workspace/setups
ENV VARIANT_TAG="${VARIANT_TAG}"
ENV WS_VARIANT_TAG="${VARIANT_TAG}"
ENV PY_VERSION="${PY_VERSION}"


#== Customizations ==

# ARG - ENV pairs for customizable stuff

# Example
# ARG JDK_VERSION=24
# ENV JDK_VERSION="${JDK_VERSION}"


#== Setup ==

# RUN command to setup things (mostly from "$SETUPS_DIR")

# Example
# RUN "$SETUPS_DIR"/jdk--setup.sh 25
